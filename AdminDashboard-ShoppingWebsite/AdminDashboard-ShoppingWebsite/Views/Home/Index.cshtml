
@{
    ViewBag.Title = "Trang chử";
    Layout = "~/Views/_AdminLayout.cshtml";
    ViewBag.Active = 0;
}

<style>
    #banner {
        width: 100%;
        overflow: hidden;
        white-space: nowrap;
        box-shadow: 0 3px 8px rgb(0 0 0 / 15%);
        border-radius: 8px;
        padding: 0;
        margin-top:50px;
    }

        #banner img {
            width: 100%;
            height: 600px;
            display: inline-block;
            margin: 0;
            padding: 0;
        }
</style>

<div id="banner">
    <img src="~/Content/img/sanpham.jpg" alt="Image 1">
    <img src="~/Content/img/sanpham.jpg" alt="Image 2">
    <img src="~/Content/img/sanpham.jpg" alt="Image 3">
</div>
<script>
    const banner = document.getElementById("banner");
    const images = banner.getElementsByTagName("img");
    let currentIndex = 0;

    function scrollToNextImage() {
        currentIndex = (currentIndex + 1) % images.length;
        const nextImage = images[currentIndex];
        banner.scrollTo({
            left: nextImage.offsetLeft,
            behavior: "smooth",
        });
    }
    setInterval(scrollToNextImage, 2000);
</script>